{{outlet}}
<div class="container">
	<div class="page-header pull-left">
        <h2>Posts</h2>
    </div>
	<div class="pull-right page-header">
		{{#link-to 's.posts.create'}}<div class="btn btn-info bump">Create Post</div>{{/link-to}}
	</div>
	<div class="clear">
		{{#each model as |post|}}
			<h4>{{#link-to 's.posts.post' post.id}}{{post.title}}{{/link-to}}</h4>
			<p>{{post.body}}</p>
		{{/each}}
	</div>
</div>
